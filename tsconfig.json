{
    "compilerOptions": {
        "target": "ES2020",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "build",
        "skipLibCheck": true,
    },
    "exclude": ["node_modules", "client", "build"]
  }